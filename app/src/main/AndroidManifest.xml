<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cursoandroid.mobileappnovo">
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileAppNovo"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UsandoRecycler"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".UsandoApi"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".MainPage"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".FormRegister"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".RecuperarSenha"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".FormProfile"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".FormLogin"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>